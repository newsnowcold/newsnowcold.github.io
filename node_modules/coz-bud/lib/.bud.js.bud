"use strict";

var spec = require('./spec.json');

module.exports = {
    force: true,
    mode: '444',
    data: {
        about: spec.about,
        get properties() {
            return Object.keys(spec.properties).map(function (key) {
                var data = spec.properties[key];
                data.optional = !data.required;
                data.name = key;
                return data;
            });
        }
    }
};

if (!module.parent) {
    require('coz').render(__filename);
}