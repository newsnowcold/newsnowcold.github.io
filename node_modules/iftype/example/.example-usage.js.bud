"use strict";

var iftype = require('../lib'),
    arrayreduce = require('arrayreduce');

module.exports = {
    force: true,
    mode: '444',
    data: {
        get is() {
            var args = [
                {text:'123', val:123},
                {text:'function foo(){}', val:function foo(){}},
                {text:'["foo", "bar"]', val:["foo", "bar"]},
                {text:'"bar"', val:"bar"},
                {text:"null", val: null},
                {text:"undefined", val: undefined}
            ];
            var types = [
                'string',
                'number',
                'object',
                'array',
                'function'
            ];
            return types.map(function (type) {
                return {
                    type: type,
                    tests: args.map(function (arg) {
                        return {
                            arg: arg.text,
                            type: type,
                            result: iftype(arg.val).is(type)
                        }
                    })
                }
            });
        }
    }
};

if (!module.parent) {
    require('coz').render(__filename);
}
